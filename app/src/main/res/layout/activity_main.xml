<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/openCalculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Calculator"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:onClick="openCalculator" />

    <Button
        android:id="@+id/openAffirmation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Affirmation Buddy"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/openCalculator"
        android:layout_marginTop="20dp"
        android:onClick="openAffirmation" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/openAffirmation"
        android:layout_marginTop="20dp"/>
</RelativeLayout>